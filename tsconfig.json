{
  "compilerOptions": {
    "types": ["jest", "node", "ts-jest"],
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2017", "ES2016"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] }
  },
  "shim": true,
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/config.json",
    "vite.config.*"
  ],
  "exclude": ["src/**/__tests__/*"]
}
