{
  "compilerOptions": {
    "types": [
      "jest",
      "node",
      "ts-jest",
      "@intlify/vite-plugin-vue-i18n/client"
    ],
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ES2017", "ES2016", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] }
  },
  "shim": true,
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/config.json",
    "vite.config.*",
    "src/i18n/locales/*.json"
  ],
  "exclude": ["src/**/__tests__/*"]
}
